# 내 답안

SELECT FLAVOR , TOTAL
FROM (SELECT A.FLAVOR , (A.TOTAL_ORDER+B.TOTAL_ORDER) AS TOTAL 
FROM FIRST_HALF AS A JOIN (SELECT FLAVOR , SUM(TOTAL_ORDER) AS TOTAL_ORDER FROM JULY GROUP BY FLAVOR) AS B 
ON A.FLAVOR = B.FLAVOR
ORDER BY TOTAL DESC ) AS D
LIMIT 3; 
